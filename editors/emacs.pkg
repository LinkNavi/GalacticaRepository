[Package]
name = "emacs"
version = "29.2"
description = "Extensible self-documenting text editor"
url = "https://ftp.gnu.org/gnu/emacs/emacs-29.2.tar.xz"
category = "editors"

[Dependencies]
depends = "ncurses gnutls libxml2"

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --without-x --with-gnutls
make -j$(nproc)
make install
