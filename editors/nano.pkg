[Package]
name = "nano"
version = "7.2"
description = "Simple terminal-based text editor"
url = "https://www.nano-editor.org/dist/v7/nano-7.2.tar.xz"
category = "editors"

[Dependencies]
depends = "ncurses"

[Build]
configure_flags = "--prefix=/usr --sysconfdir=/etc"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --sysconfdir=/etc --enable-utf8
make -j$(nproc)
make install
