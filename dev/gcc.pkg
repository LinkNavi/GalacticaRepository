[Package]
name = "gcc"
version = "14.2.0"
description = "GNU Compiler Collection - C and C++ compilers"
url = "https://ftp.gnu.org/gnu/gcc/gcc-14.2.0/gcc-14.2.0.tar.xz"
category = "development"

[Dependencies]
depends = "binutils glibc make"

[Build]
configure_flags = "--prefix=/usr --enable-languages=c,c++ --disable-multilib --disable-bootstrap --with-system-zlib"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
# GCC requires out-of-tree build
mkdir -p build && cd build
../configure \
    --prefix=/usr \
    --enable-languages=c,c++ \
    --disable-multilib \
    --disable-bootstrap \
    --with-system-zlib
make -j$(nproc)
make install
