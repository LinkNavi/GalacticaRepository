[Package]
name = "postgresql"
version = "16.1"
description = "Advanced object-relational database"
url = "https://ftp.postgresql.org/pub/source/v16.1/postgresql-16.1.tar.bz2"
category = "databases"

[Dependencies]
depends = "readline openssl zlib"

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --with-openssl
make -j$(nproc)
make install
