[Package]
name = "fish"
version = "3.7.0"
description = "User-friendly command line shell"
url = "https://github.com/fish-shell/fish-shell/releases/download/3.7.0/fish-3.7.0.tar.xz"
category = "shells"

[Dependencies]
depends = "ncurses"

[Build]
configure_flags = ""
make_flags = ""
install_target = ""

[Script]
cmake -B build -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
cmake --build build -j$(nproc)
cmake --install build
