[Package]
name = "zsh"
version = "5.9"
description = "Powerful shell with scripting language"
url = "https://www.zsh.org/pub/zsh-5.9.tar.xz"
category = "shells"

[Dependencies]
depends = "ncurses"

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --enable-etcdir=/etc/zsh
make -j$(nproc)
make install
