[Package]
name = "ninja"
version = "1.11.1"
description = "Small build system with a focus on speed"
url = "https://github.com/ninja-build/ninja/archive/v1.11.1.tar.gz"
category = "development"

[Dependencies]
depends = "python"

[Build]
configure_flags = ""
make_flags = ""
install_target = ""

[Script]
# Ninja builds itself with Python
python3 configure.py --bootstrap
install -Dm755 ninja /usr/bin/ninja
