[Package]
name = "binutils"
version = "2.42"
description = "GNU binary utilities (ld, as, objdump, etc.)"
url = "https://ftp.gnu.org/gnu/binutils/binutils-2.42.tar.xz"
category = "development"

[Dependencies]
depends = "zlib"

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
mkdir -p build && cd build
../configure --prefix=/usr --enable-gold --enable-plugins --enable-shared
make -j$(nproc)
make install
