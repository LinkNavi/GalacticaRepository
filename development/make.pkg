[Package]
name = "make"
version = "4.4.1"
description = "GNU make utility"
url = "https://ftp.gnu.org/gnu/make/make-4.4.1.tar.gz"
category = "development"

[Dependencies]
depends = ""

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr
make -j$(nproc)
make install
