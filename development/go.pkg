[Package]
name = "go"
version = "1.21.6"
description = "Go programming language"
url = "https://go.dev/dl/go1.21.6.src.tar.gz"
category = "development"

[Dependencies]
depends = ""

[Build]
configure_flags = ""
make_flags = ""
install_target = ""

[Script]
# Go bootstraps from binary
cd src
GOROOT_FINAL=/usr/lib/go ./make.bash

# Install
mkdir -p /usr/lib/go
cp -a ../bin ../pkg ../src /usr/lib/go/
ln -sf /usr/lib/go/bin/go /usr/bin/go
ln -sf /usr/lib/go/bin/gofmt /usr/bin/gofmt
