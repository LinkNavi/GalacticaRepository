[Package]
name = "patch"
version = "2.7.6"
description = "GNU patch utility"
url = "https://ftp.gnu.org/gnu/patch/patch-2.7.6.tar.xz"
category = "development"

[Dependencies]
depends = ""

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr
make -j$(nproc)
make install
