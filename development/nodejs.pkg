[Package]
name = "nodejs"
version = "20.11.0"
description = "JavaScript runtime built on V8"
url = "https://nodejs.org/dist/v20.11.0/node-v20.11.0.tar.xz"
category = "development"

[Dependencies]
depends = "python openssl zlib"

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --shared-openssl --shared-zlib
make -j$(nproc)
make install
