[Package]
name = "mpv"
version = "0.37.0"
description = "Free and open-source media player"
url = "https://github.com/mpv-player/mpv/archive/v0.37.0.tar.gz"
category = "multimedia"

[Dependencies]
depends = "ffmpeg"

[Build]
configure_flags = ""
make_flags = ""
install_target = ""

[Script]
meson setup build --prefix=/usr -Dbuildtype=release
ninja -C build
ninja -C build install
