[Package]
name = "wget"
version = "1.21.4"
description = "Network utility to retrieve files from the Web"
url = "https://ftp.gnu.org/gnu/wget/wget-1.21.4.tar.gz"
category = "network"

[Dependencies]
depends = "openssl zlib"

[Build]
configure_flags = "--prefix=/usr --with-ssl=openssl"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --with-ssl=openssl
make -j$(nproc)
make install
