[Package]
name = "curl"
version = "8.11.0"
description = "Command line tool and library for transferring data with URLs"
url = "https://curl.se/download/curl-8.11.0.tar.xz"
category = "network"

[Dependencies]
depends = "openssl zlib"

[Build]
configure_flags = "--prefix=/usr --with-openssl --enable-versioned-symbols --enable-threaded-resolver --with-ca-bundle=/etc/ssl/certs/ca-certificates.crt"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
