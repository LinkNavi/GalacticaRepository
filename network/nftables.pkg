[Package]
name = "nftables"
version = "1.0.9"
description = "Netfilter tables userspace tools"
url = "https://netfilter.org/projects/nftables/files/nftables-1.0.9.tar.xz"
category = "network"

[Dependencies]
depends = "readline"

[Build]
configure_flags = "--prefix=/usr --sysconfdir=/etc"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --sysconfdir=/etc --disable-man-doc
make -j$(nproc)
make install
