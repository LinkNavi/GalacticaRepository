[Package]
name = "dhcpcd"
version = "10.0.6"
description = "DHCP client daemon"
url = "https://github.com/NetworkConfiguration/dhcpcd/releases/download/v10.0.6/dhcpcd-10.0.6.tar.xz"
category = "network"

[Dependencies]
depends = ""

[Build]
configure_flags = "--prefix=/usr --sysconfdir=/etc --rundir=/run"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --sysconfdir=/etc --rundir=/run --dbdir=/var/lib/dhcpcd
make -j$(nproc)
make install
