[Package]
name = "openssh"
version = "9.6p1"
description = "SSH connectivity tools"
url = "https://ftp.openbsd.org/pub/OpenBSD/OpenSSH/portable/openssh-9.6p1.tar.gz"
category = "network"

[Dependencies]
depends = "openssl zlib"

[Build]
configure_flags = "--prefix=/usr --sysconfdir=/etc/ssh"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --sysconfdir=/etc/ssh --with-privsep-path=/var/lib/sshd
make -j$(nproc)
make install
