[Package]
name = "nginx"
version = "1.25.4"
description = "High performance web server"
url = "https://nginx.org/download/nginx-1.25.4.tar.gz"
category = "web"

[Dependencies]
depends = "openssl zlib"

[Build]
configure_flags = ""
make_flags = ""
install_target = ""

[Script]
./configure --prefix=/usr --conf-path=/etc/nginx/nginx.conf --sbin-path=/usr/bin/nginx \
    --pid-path=/run/nginx.pid --with-http_ssl_module --with-http_v2_module
make -j$(nproc)
make install
