[Package]
name = "xkeyboard-config"
version = "2.41"
description = "X keyboard configuration database"
url = "https://xorg.freedesktop.org/archive/individual/data/xkeyboard-config/xkeyboard-config-2.41.tar.xz"
category = "desktop"

[Dependencies]
depends = "xorg-proto"

[Build]
configure_flags = ""
make_flags = ""
install_target = ""

[Script]
meson setup build \
    --prefix=/usr \
    --buildtype=release

ninja -C build
ninja -C build install
