[Package]
name = "libxkbcommon"
version = "1.6.0"
description = "Keyboard handling library"
url = "https://xkbcommon.org/download/libxkbcommon-1.6.0.tar.xz"
category = "libraries"

[Dependencies]
depends = "xkeyboard-config libxml2"

[Build]
configure_flags = ""
make_flags = ""
install_target = ""

[Script]
meson setup build \
    --prefix=/usr \
    --buildtype=release \
    -Denable-docs=false \
    -Denable-wayland=true \
    -Denable-x11=true

ninja -C build
ninja -C build install
