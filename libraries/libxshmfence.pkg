[Package]
name = "libxshmfence"
version = "1.3.2"
description = "X11 shared memory fences"
url = "https://xorg.freedesktop.org/archive/individual/lib/libxshmfence-1.3.2.tar.xz"
category = "libraries"

[Dependencies]
depends = "xorg-proto"

[Build]
configure_flags = "--prefix=/usr --disable-static"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --disable-static
make -j$(nproc)
make install
