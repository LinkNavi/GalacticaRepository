[Package]
name = "gmp"
version = "6.3.0"
description = "GNU Multiple Precision Arithmetic Library"
url = "https://ftp.gnu.org/gnu/gmp/gmp-6.3.0.tar.xz"
category = "libraries"

[Dependencies]
depends = ""

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --enable-cxx
make -j$(nproc)
make install
