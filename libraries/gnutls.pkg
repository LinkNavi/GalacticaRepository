[Package]
name = "gnutls"
version = "3.8.3"
description = "Secure communications library"
url = "https://www.gnupg.org/ftp/gcrypt/gnutls/v3.8/gnutls-3.8.3.tar.xz"
category = "libraries"

[Dependencies]
depends = "nettle libtasn1 libunistring"

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --disable-guile --with-default-trust-store-pkcs11="pkcs11:"
make -j$(nproc)
make install
