[Package]
name = "libxext"
version = "1.3.6"
description = "X11 miscellaneous extensions library"
url = "https://xorg.freedesktop.org/archive/individual/lib/libXext-1.3.6.tar.xz"
category = "libraries"

[Dependencies]
depends = "libX11 xorg-proto"

[Build]
configure_flags = "--prefix=/usr --disable-static"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --disable-static
make -j$(nproc)
make install
