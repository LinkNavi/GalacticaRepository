[Package]
name = "libpng"
version = "1.6.40"
description = "PNG reference library"
url = "https://download.sourceforge.net/libpng/libpng-1.6.40.tar.xz"
category = "libraries"

[Dependencies]
depends = "zlib"

[Build]
configure_flags = "--prefix=/usr --disable-static"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --disable-static
make -j$(nproc)
make install
