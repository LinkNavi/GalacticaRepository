[Package]
name = "libxkbfile"
version = "1.1.3"
description = "X11 keyboard file manipulation library"
url = "https://xorg.freedesktop.org/archive/individual/lib/libxkbfile-1.1.3.tar.xz"
category = "libraries"

[Dependencies]
depends = "libX11 xorg-proto"

[Build]
configure_flags = "--prefix=/usr --disable-static"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --disable-static
make -j$(nproc)
make install
