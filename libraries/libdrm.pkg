[Package]
name = "libdrm"
version = "2.4.120"
description = "Direct Rendering Manager library and headers"
url = "https://dri.freedesktop.org/libdrm/libdrm-2.4.120.tar.xz"
category = "libraries"

[Dependencies]
depends = "libpciaccess"

[Build]
configure_flags = ""
make_flags = ""
install_target = ""

[Script]
meson setup build \
    --prefix=/usr \
    --buildtype=release \
    -Dudev=false \
    -Dvalgrind=disabled

ninja -C build
ninja -C build install
