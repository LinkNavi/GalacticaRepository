[Package]
name = "unibilium"
version = "2.1.1"
description = "Terminfo parsing library"
url = "https://github.com/neovim/unibilium/archive/v2.1.1.tar.gz"
category = "libraries"

[Dependencies]
depends = ""

[Build]
configure_flags = ""
make_flags = ""
install_target = ""

[Script]
# unibilium uses CMake
cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr

cmake --build build -j$(nproc)
cmake --install build
