[Package]
name = "libX11"
version = "1.8.7"
description = "X11 client-side library"
url = "https://xorg.freedesktop.org/archive/individual/lib/libX11-1.8.7.tar.xz"
category = "libraries"

[Dependencies]
depends = "xorg-proto libxcb xtrans"

[Build]
configure_flags = "--prefix=/usr --disable-static"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --disable-static
make -j$(nproc)
make install
