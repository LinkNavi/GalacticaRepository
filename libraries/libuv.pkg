[Package]
name = "libuv"
version = "1.48.0"
description = "Multi-platform asynchronous I/O library"
url = "https://github.com/libuv/libuv/archive/v1.48.0.tar.gz"
category = "libraries"

[Dependencies]
depends = ""

[Build]
configure_flags = ""
make_flags = ""
install_target = ""

[Script]
# libuv uses CMake
cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DBUILD_TESTING=OFF

cmake --build build -j$(nproc)
cmake --install build
