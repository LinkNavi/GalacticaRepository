[Package]
name = "cairo"
version = "1.18.0"
description = "2D graphics library with support for multiple output devices"
url = "https://cairographics.org/releases/cairo-1.18.0.tar.xz"
category = "libraries"

[Dependencies]
depends = "pixman libpng fontconfig freetype2 zlib"

[Build]
configure_flags = ""
make_flags = ""
install_target = ""

[Script]
meson setup build \
    --prefix=/usr \
    --buildtype=release \
    -Dtests=disabled

ninja -C build
ninja -C build install
