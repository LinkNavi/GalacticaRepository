[Package]
name = "mpc"
version = "1.3.1"
description = "Multiple precision complex library"
url = "https://ftp.gnu.org/gnu/mpc/mpc-1.3.1.tar.gz"
category = "libraries"

[Dependencies]
depends = "gmp mpfr"

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr
make -j$(nproc)
make install
