[Package]
name = "wayland-protocols"
version = "1.33"
description = "Additional Wayland protocols"
url = "https://gitlab.freedesktop.org/wayland/wayland-protocols/-/releases/1.33/downloads/wayland-protocols-1.33.tar.xz"
category = "libraries"

[Dependencies]
depends = "wayland"

[Build]
configure_flags = ""
make_flags = ""
install_target = ""

[Script]
meson setup build \
    --prefix=/usr \
    --buildtype=release \
    -Dtests=false

ninja -C build
ninja -C build install
