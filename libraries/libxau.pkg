[Package]
name = "libxau"
version = "1.0.11"
description = "X11 authorisation library"
url = "https://xorg.freedesktop.org/archive/individual/lib/libXau-1.0.11.tar.xz"
category = "libraries"

[Dependencies]
depends = "xorg-proto"

[Build]
configure_flags = "--prefix=/usr --disable-static"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --disable-static
make -j$(nproc)
make install
