[Package]
name = "libxdamage"
version = "1.1.6"
description = "X11 damaged region extension library"
url = "https://xorg.freedesktop.org/archive/individual/lib/libXdamage-1.1.6.tar.xz"
category = "libraries"

[Dependencies]
depends = "libX11 libxfixes xorg-proto"

[Build]
configure_flags = "--prefix=/usr --disable-static"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --disable-static
make -j$(nproc)
make install
