[Package]
name = "mpfr"
version = "4.2.1"
description = "Multiple-precision floating-point library"
url = "https://ftp.gnu.org/gnu/mpfr/mpfr-4.2.1.tar.xz"
category = "libraries"

[Dependencies]
depends = "gmp"

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr
make -j$(nproc)
make install
