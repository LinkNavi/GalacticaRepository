[Package]
name = "zlib"
version = "1.3.1"
description = "Compression library"
url = "https://zlib.net/zlib-1.3.1.tar.gz"
category = "libraries"

[Dependencies]
depends = ""

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
# zlib uses custom configure script
./configure --prefix=/usr
make -j$(nproc)
make install
