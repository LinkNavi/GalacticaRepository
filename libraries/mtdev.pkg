[Package]
name = "mtdev"
version = "1.1.6"
description = "Multitouch Protocol Translation Library"
url = "https://bitmath.org/code/mtdev/mtdev-1.1.6.tar.bz2"
category = "libraries"

[Dependencies]
depends = ""

[Build]
configure_flags = "--prefix=/usr --disable-static"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --disable-static
make -j$(nproc)
make install
