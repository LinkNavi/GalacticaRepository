[Package]
name = "pixman"
version = "0.43.4"
description = "Low-level pixel manipulation library"
url = "https://cairographics.org/releases/pixman-0.43.4.tar.gz"
category = "libraries"

[Dependencies]
depends = ""

[Build]
configure_flags = ""
make_flags = ""
install_target = ""

[Script]
meson setup build \
    --prefix=/usr \
    --buildtype=release \
    -Dgtk=disabled \
    -Dlibpng=disabled

ninja -C build
ninja -C build install
