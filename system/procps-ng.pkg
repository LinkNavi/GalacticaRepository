[Package]
name = "procps-ng"
version = "4.0.4"
description = "Utilities for monitoring system processes (ps, top, free, etc.)"
url = "https://sourceforge.net/projects/procps-ng/files/Production/procps-ng-4.0.4.tar.xz"
category = "system"

[Dependencies]
depends = "ncurses"

[Build]
configure_flags = "--prefix=/usr --disable-static"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --disable-static --disable-kill
make -j$(nproc)
make install
