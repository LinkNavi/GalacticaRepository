[Package]
name = "less"
version = "643"
description = "Terminal pager program"
url = "https://www.greenwoodsoftware.com/less/less-643.tar.gz"
category = "system"

[Dependencies]
depends = "ncurses"

[Build]
configure_flags = "--prefix=/usr --sysconfdir=/etc"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --sysconfdir=/etc
make -j$(nproc)
make install
