[Package]
name = "htop"
version = "3.3.0"
description = "Interactive process viewer"
url = "https://github.com/htop-dev/htop/releases/download/3.3.0/htop-3.3.0.tar.xz"
category = "system"

[Dependencies]
depends = "ncurses"

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr
make -j$(nproc)
make install
