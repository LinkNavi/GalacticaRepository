[Package]
name = "gawk"
version = "5.3.0"
description = "GNU awk pattern scanning and processing language"
url = "https://ftp.gnu.org/gnu/gawk/gawk-5.3.0.tar.xz"
category = "system"

[Dependencies]
depends = "readline"

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr
make -j$(nproc)
make install
ln -sf gawk /usr/bin/awk
