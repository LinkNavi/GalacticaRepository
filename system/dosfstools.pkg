[Package]
name = "dosfstools"
version = "4.2"
description = "DOS filesystem utilities (mkfs.fat, fsck.fat)"
url = "https://github.com/dosfstools/dosfstools/releases/download/v4.2/dosfstools-4.2.tar.gz"
category = "system"

[Dependencies]
depends = ""

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --sbindir=/usr/sbin
make -j$(nproc)
make install
