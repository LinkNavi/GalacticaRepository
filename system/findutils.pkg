[Package]
name = "findutils"
version = "4.9.0"
description = "GNU find utilities (find, xargs, locate)"
url = "https://ftp.gnu.org/gnu/findutils/findutils-4.9.0.tar.xz"
category = "system"

[Dependencies]
depends = ""

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --localstatedir=/var/lib/locate
make -j$(nproc)
make install
