[Package]
name = "eza"
version = "0.18.2"
description = "Modern replacement for ls"
url = "https://github.com/eza-community/eza/archive/v0.18.2.tar.gz"
category = "system"

[Dependencies]
depends = "rust"

[Build]
configure_flags = ""
make_flags = ""
install_target = ""

[Script]
cargo build --release
install -Dm755 target/release/eza /usr/bin/eza
ln -sf eza /usr/bin/exa
