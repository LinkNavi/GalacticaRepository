[Package]
name = "grep"
version = "3.11"
description = "GNU regular expression matcher"
url = "https://ftp.gnu.org/gnu/grep/grep-3.11.tar.xz"
category = "system"

[Dependencies]
depends = ""

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr
make -j$(nproc)
make install
