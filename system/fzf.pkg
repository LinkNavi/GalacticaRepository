[Package]
name = "fzf"
version = "0.46.1"
description = "Command-line fuzzy finder"
url = "https://github.com/junegunn/fzf/archive/0.46.1.tar.gz"
category = "system"

[Dependencies]
depends = "go"

[Build]
configure_flags = ""
make_flags = ""
install_target = ""

[Script]
go build -o fzf
install -Dm755 fzf /usr/bin/fzf
install -Dm644 shell/completion.bash /usr/share/bash-completion/completions/fzf
install -Dm644 shell/completion.zsh /usr/share/zsh/site-functions/_fzf
