[Package]
name = "coreutils"
version = "9.4"
description = "GNU core utilities (ls, cp, mv, rm, etc.)"
url = "https://ftp.gnu.org/gnu/coreutils/coreutils-9.4.tar.xz"
category = "system"

[Dependencies]
depends = ""

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr
make -j$(nproc)
make install
