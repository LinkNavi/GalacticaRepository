[Package]
name = "sed"
version = "4.9"
description = "GNU stream editor"
url = "https://ftp.gnu.org/gnu/sed/sed-4.9.tar.xz"
category = "system"

[Dependencies]
depends = ""

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr
make -j$(nproc)
make install
