[Package]
name = "diffutils"
version = "3.10"
description = "GNU diff utilities"
url = "https://ftp.gnu.org/gnu/diffutils/diffutils-3.10.tar.xz"
category = "system"

[Dependencies]
depends = ""

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr
make -j$(nproc)
make install
