[Package]
name = "jq"
version = "1.7.1"
description = "Command-line JSON processor"
url = "https://github.com/jqlang/jq/releases/download/jq-1.7.1/jq-1.7.1.tar.gz"
category = "system"

[Dependencies]
depends = ""

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr --disable-docs
make -j$(nproc)
make install
