[Package]
name = "tmux"
version = "3.4"
description = "Terminal multiplexer"
url = "https://github.com/tmux/tmux/releases/download/3.4/tmux-3.4.tar.gz"
category = "system"

[Dependencies]
depends = "ncurses libevent"

[Build]
configure_flags = "--prefix=/usr"
make_flags = "-j$(nproc)"
install_target = "install"

[Script]
./configure --prefix=/usr
make -j$(nproc)
make install
